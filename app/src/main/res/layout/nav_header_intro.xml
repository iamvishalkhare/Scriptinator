<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="#303f9f"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="93dp"
        android:layout_height="84dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:srcCompat="@drawable/shell" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="SCRIPTINATOR"
        android:padding="1dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:text="SCRIPTINATOR" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="This is a verbose Shell Scripting tutorial. It's targeted audience are students and professionals who are familiar with basic Unix commands."
        android:text="Shell Scripting Tutorials"
        tools:text="Shell Scripting Tutorials"
        android:layout_marginBottom="2dp"/>

</LinearLayout>
